<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="172dp"
                android:paddingTop="@dimen/spacing_medial_24"
                android:paddingRight="@dimen/spacing_normal_16"
                android:paddingLeft="@dimen/spacing_normal_16"
                android:paddingBottom="@dimen/spacing_small_8"
                android:background="@drawable/header_bg">
    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/image_header"
        android:layout_marginTop="@dimen/spacing_normal_16"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_medium_56"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/user_email_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/white"
            android:textSize="14sp"
            android:fontFamily="sans-serif"/>
        <TextView
            android:id="@+id/user_mobile_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/white"
            android:textSize="14sp"
            android:fontFamily="sans-serif-medium"/>
<!--        <TextView
            android:id="@+id/company_name_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ООО Рога и капыта"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:fontFamily="sans-serif-medium"/>-->

    </LinearLayout>
</RelativeLayout>