<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="mobi.gpsmarker.gpsmarkercommander.ui.activities.m180.M180ChangeNameActivity">
    <android.support.design.widget.AppBarLayout
        android:id="@+id/set_appbar_layout"
        android:theme="@style/AppTheme.AppBarOverlay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_primary">
        <android.support.v7.widget.Toolbar
            android:popupTheme="@style/AppTheme.PopupOverlay"
            android:theme="@style/ToolBarStyle"
            android:id="@+id/M180_change_name_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:titleTextColor="@color/white"
            app:layout_collapseMode="pin"/>
    </android.support.design.widget.AppBarLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/activity_lang_set"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/spacing_medium_32"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/size_medium_56"
        >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/font_large_24"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:text="Настройки имени">
    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/spacing_small_8"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_normal_15"
            android:layout_weight="1"
            android:paddingTop="@dimen/spacing_large_54"
            android:textAlignment="viewStart"
            android:textColor="@color/black"
            android:text="Отображение в sms">
        </TextView>
        <android.support.v7.widget.SwitchCompat
            android:id="@+id/disp_name_in_sms_sw"
            android:layout_weight="1.5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="@dimen/spacing_large_54"
            android:text="Скрывать"
            android:textOff="Скрывать"
            android:textOn="Отображать"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/font_medium_20"
        android:textColor="@color/black"

        android:paddingLeft="@dimen/spacing_medial_24"
        android:paddingRight="@dimen/spacing_medial_24"
        android:paddingTop="@dimen/spacing_medial_24"
        android:layout_marginTop="@dimen/spacing_medial_24"
        android:clickable="true"
        android:onClick="onClick"
        android:textAlignment="center"
        android:text="Имя"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/change_name_ed"
        android:textSize="@dimen/font_medium_20"
        android:text="marker m130"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/change_name_save_btn"
        android:layout_marginTop="@dimen/spacing_large_54"
        android:text="Сохранить"/>
</LinearLayout>
</android.support.design.widget.CoordinatorLayout>

