<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="@dimen/spacing_extrasmall_4"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_medial_48"
        android:paddingTop="@dimen/spacing_small_8"
        android:layout_marginTop="@dimen/spacing_small_8"
        android:layout_marginBottom="@dimen/spacing_small_8"
        android:textSize="@dimen/font_large_24"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:textColor="@color/black"
        android:background="@color/grey_light_light"
        android:text="Состояние"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/spacing_extrasmall_4"
        android:orientation="vertical">
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_size"
            android:background="@color/grey_light"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <View
                android:layout_width="@dimen/line_size"
                android:layout_height="match_parent"
                android:background="@color/grey_light"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:background="@color/white"
                android:orientation="vertical">
                <ImageView
                    style="@style/icon.all"
                    android:layout_width="@dimen/size_extrasmall_16"
                    android:layout_height="@dimen/size_extrasmall_16"
                    android:src="@drawable/ic_battery_45dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Заряд"
                    android:textAlignment="center"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/font_small_12"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/device_curr_charge_tv"
                    android:layout_marginBottom="@dimen/spacing_small_8"
                    android:text="0"
                    android:textAlignment="center"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/font_small_12"/>
            </LinearLayout>
            <View
                android:layout_width="@dimen/line_size"
                android:layout_height="match_parent"
                android:background="@color/grey_light"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:background="@color/white"
                android:orientation="vertical">
                <ImageView
                    style="@style/icon.all"
                    android:layout_width="@dimen/size_extrasmall_16"
                    android:layout_height="@dimen/size_extrasmall_16"
                    android:src="@drawable/ic_balance_45dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Баланс"
                    android:textAlignment="center"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/font_small_12"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/device_curr_balance_tv"
                    android:layout_marginBottom="@dimen/spacing_small_8"
                    android:text="0"
                    android:textAlignment="center"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/font_small_12"/>
            </LinearLayout>
            <View
                android:layout_width="@dimen/line_size"
                android:layout_height="match_parent"
                android:background="@color/grey_light"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:background="@color/white"
                android:orientation="vertical">
                <ImageView
                    style="@style/icon.all"
                    android:layout_width="@dimen/size_extrasmall_16"
                    android:layout_height="@dimen/size_extrasmall_16"
                    android:src="@drawable/ic_temperature_45dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Temp"
                    android:textAlignment="center"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/font_small_12"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/device_curr_temp_tv"
                    android:layout_marginBottom="@dimen/spacing_small_8"
                    android:text="0"
                    android:textAlignment="center"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/font_small_12"/>
            </LinearLayout>
            <View
                android:layout_width="@dimen/line_size"
                android:layout_height="match_parent"
                android:background="@color/grey_light"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:background="@color/white"
                android:orientation="vertical">
                <ImageView
                    style="@style/icon.all"
                    android:layout_width="@dimen/size_extrasmall_16"
                    android:layout_height="@dimen/size_extrasmall_16"
                    android:src="@drawable/ic_gsm_45dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="GSM"
                    android:textAlignment="center"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/font_small_12"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/device_curr_gsm_tv"
                    android:layout_marginBottom="@dimen/spacing_small_8"
                    android:text="0"
                    android:textAlignment="center"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/font_small_12"/>
            </LinearLayout>
            <View
                android:layout_width="@dimen/line_size"
                android:layout_height="match_parent"
                android:background="@color/grey_light"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:background="@color/white"
                android:orientation="vertical">
                <ImageView
                    style="@style/icon.all"
                    android:layout_width="@dimen/size_extrasmall_16"
                    android:layout_height="@dimen/size_extrasmall_16"
                    android:src="@drawable/ic_satellite_45dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="LBS"
                    android:textAlignment="center"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/font_small_12"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/device_curr_lbs_tv"
                    android:layout_marginBottom="@dimen/spacing_small_8"
                    android:text="0"
                    android:textAlignment="center"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/font_small_12"/>
            </LinearLayout>
            <View
                android:layout_width="@dimen/line_size"
                android:layout_height="match_parent"
                android:background="@color/grey_light"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_size"
            android:background="@color/grey_light"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                style="@style/icon.all"
                android:layout_marginLeft="@dimen/spacing_normal_16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/device_last_date_transfer_tv"
                android:layout_weight="1"
                android:layout_marginBottom="@dimen/spacing_small_8"
                android:textSize="@dimen/font_small_12"
                android:textAlignment="textStart"
                android:text="0"
                android:textColor="@color/grey"/>
            <TextView
                style="@style/icon.all"
                android:layout_width="match_parent"
                android:layout_marginLeft="@dimen/spacing_normal_16"
                android:layout_height="wrap_content"
                android:id="@+id/device_imei_list_tv"
                android:layout_marginBottom="@dimen/spacing_small_8"
                android:textSize="@dimen/font_small_12"
                android:textAlignment="textStart"
                android:layout_weight="1"
                android:text="0"
                android:textColor="@color/grey"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <Button
                android:id="@+id/device_delete_list_btn"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="Удалить"
                android:focusable="false"/>
            <Button
                android:layout_weight="1"
                android:id="@+id/device_refresh_list_btn"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:text="Обновить"
                android:focusable="false"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
