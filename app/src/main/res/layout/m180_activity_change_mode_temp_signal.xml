<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/set_temp_signal_ccordinator_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="mobi.gpsmarker.gpsmarkercommander.ui.activities.control_activity">
    <android.support.design.widget.AppBarLayout
        android:id="@+id/set_appbar_layout"
        android:theme="@style/AppTheme.AppBarOverlay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_primary">
        <android.support.v7.widget.Toolbar
            android:popupTheme="@style/AppTheme.PopupOverlay"
            android:theme="@style/ToolBarStyle"
            android:id="@+id/M180_change_mode_temp_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/color_accent"
            android:titleTextColor="@color/white"
            app:layout_collapseMode="pin"/>
    </android.support.design.widget.AppBarLayout>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/spacing_medium_32"
        android:orientation="vertical"
        tools:context="mobi.gpsmarker.gpsmarkercommander.ui.activities.m180.M180ChangeModeTempSignalActivity"
        android:layout_marginTop="@dimen/size_medium_56">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/font_large_24"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:text="Выбор режима работы">
    </TextView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="@dimen/spacing_small_8"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/mode_temp_1_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="@dimen/font_medium_20"
                android:textColor="@color/black"
                android:paddingBottom="@dimen/spacing_medial_24"
                android:paddingLeft="@dimen/spacing_medial_24"
                android:paddingRight="@dimen/spacing_medial_24"
                android:paddingTop="@dimen/spacing_medial_24"
                android:clickable="true"
                android:onClick="onClick"
                android:text="Режим 1"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/mode_temp_1_iv"
                android:paddingTop="@dimen/spacing_medial_24"
                android:src="@drawable/ic_temp_mode_1_25dp"
                android:layout_weight="2"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/mode_temp_2_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="@dimen/font_medium_20"
                android:textColor="@color/black"
                android:paddingBottom="@dimen/spacing_medial_24"
                android:paddingLeft="@dimen/spacing_medial_24"
                android:paddingRight="@dimen/spacing_medial_24"
                android:paddingTop="@dimen/spacing_medial_24"
                android:clickable="true"
                android:onClick="onClick"
                android:text="Режим 2"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/mode_temp_2_iv"
                android:paddingTop="@dimen/spacing_medial_24"
                android:src="@drawable/ic_temp_mode_2_25dp"
                android:layout_weight="2"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/mode_temp_3_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="@dimen/font_medium_20"
                android:textColor="@color/black"
                android:paddingBottom="@dimen/spacing_medial_24"
                android:paddingLeft="@dimen/spacing_medial_24"
                android:paddingRight="@dimen/spacing_medial_24"
                android:paddingTop="@dimen/spacing_medial_24"
                android:clickable="true"
                android:onClick="onClick"
                android:text="Режим 3"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/mode_temp_3_iv"
                android:paddingTop="@dimen/spacing_medial_24"
                android:src="@drawable/ic_temp_mode_3_25dp"
                android:layout_weight="2"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/mode_temp_4_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="@dimen/font_medium_20"
                android:textColor="@color/black"
                android:paddingBottom="@dimen/spacing_medial_24"
                android:paddingLeft="@dimen/spacing_medial_24"
                android:paddingRight="@dimen/spacing_medial_24"
                android:paddingTop="@dimen/spacing_medial_24"
                android:clickable="true"
                android:onClick="onClick"
                android:text="Режим 4"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/mode_temp_4_iv"
                android:paddingTop="@dimen/spacing_medial_24"
                android:src="@drawable/ic_temp_mode_4_25dp"
                android:layout_weight="2"/>
        </LinearLayout>
        <Button
            android:id="@+id/ch_temp_mode_save_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_normal_16"
            android:text="Сохранить"/>
    </LinearLayout>
</LinearLayout>
</android.support.design.widget.CoordinatorLayout>