<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="2dp"
    android:layout_marginTop="2dp"
    app:cardBackgroundColor="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/line_size"
                    android:background="@color/grey"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    style="@style/icon.all"
                    android:background="@color/white">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:background="@color/white">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/name_device_txt"
                            style="@style/icon.all_wo_bot"
                            android:text="Наименование устройства"
                            android:textColor="@color/black"
                            android:textSize="@dimen/font_medium_20"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            style="@style/icon.all_wo_bot"
                            android:id="@+id/type_device_txt"
                            android:textColor="@color/black"
                            android:textSize="@dimen/font_small_12"
                            android:text="Тип устройства"
                            android:layout_marginLeft="@dimen/spacing_small_8"
                            android:layout_marginBottom="@dimen/spacing_small_8"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/imei_device_txt"
                            style="@style/icon.all_wo_bot"
                            android:layout_marginLeft="@dimen/spacing_small_8"
                            android:layout_marginBottom="@dimen/spacing_small_8"
                            android:textColor="@color/black"
                            android:textSize="@dimen/font_small_12"
                            android:text="IMEI устройства"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            style="@style/icon.all_wo_bot"
                            android:id="@+id/uniq_device_txt"
                            android:layout_marginLeft="@dimen/spacing_small_8"
                            android:layout_marginBottom="@dimen/spacing_small_8"
                            android:textColor="@color/black"
                            android:textSize="@dimen/font_small_12"
                            android:text="Уникальный идентификатор устройства"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            style="@style/icon.all_wo_bot"
                            android:id="@+id/date_reg_device_txt"
                            android:layout_marginLeft="@dimen/spacing_small_8"
                            android:layout_marginBottom="@dimen/spacing_small_8"
                            android:textColor="@color/black"
                            android:textSize="@dimen/font_small_12"
                            android:text="Дата регистрации устройства"/>
                    </LinearLayout>
<!--                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:layout_weight="2"
                        android:layout_gravity="center_vertical"
                        android:background="@color/white">
                        <ImageView
                            android:id="@+id/settings_img"
                            android:src="@drawable/ic_build_black_24dp"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_marginTop="20dp"/>
                        <ImageView
                            android:id="@+id/commands_img"
                            android:src="@drawable/ic_play_circle_filled_black_24dp"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_marginLeft="@dimen/spacing_small_8"
                            android:layout_marginTop="20dp"/>
                        <ImageView
                            android:id="@+id/track_img"
                            android:src="@drawable/ic_layers_black_24dp"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_marginLeft="@dimen/spacing_small_8"
                            android:layout_marginTop="20dp"/>
                    </LinearLayout>-->
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/line_size"
                    android:id="@+id/outside"
                    android:background="@color/grey"/>
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>