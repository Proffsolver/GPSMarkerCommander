<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_gpsmarker_list"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_light"
    android:layout_weight="1"
    android:orientation="vertical"
    tools:context="mobi.gpsmarker.gpsmarkercommander.ui.activities.control_activity">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/spacing_extrasmall_4"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/white">
                <TextView
                    android:id="@+id/go_set_control_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/activity_vertical_margin"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:paddingRight="@dimen/activity_horizontal_margin"
                    android:paddingTop="@dimen/activity_vertical_margin"
                    android:textAlignment="center"
                    android:layout_weight="1"
                    android:layout_gravity="center_horizontal"
                    android:clickable="true"
                    android:onClick="onClick"
                    android:textColor="@color/black"
                    android:text="Настройки"
                    android:textSize="@dimen/font_large_24"/>
                <View
                    android:layout_width="@dimen/line_size"
                    android:layout_height="match_parent"
                    android:background="@color/grey_light"/>
                <!-- <Button
                     android:id="@+id/set_events_btn"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_gravity="center_horizontal"
                     android:minWidth="126dp"
                     android:text="Уведомления"
                     android:textAllCaps="true"/>-->
                <TextView
                    android:id="@+id/go_track_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/activity_vertical_margin"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:paddingRight="@dimen/activity_horizontal_margin"
                    android:paddingTop="@dimen/activity_vertical_margin"
                    android:layout_weight="1"
                    android:layout_gravity="center_horizontal"
                    android:textAlignment="center"
                    android:textSize="@dimen/font_large_24"
                    android:textColor="@color/black"
                    android:clickable="true"
                    android:onClick="onClick"
                    android:text="Трэк"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_size"
                android:background="@color/grey_light"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_size"
                android:background="@color/grey_light"/>
            <include layout="@layout/status_bar"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_extrasmall_4"
                android:layout_marginBottom="@dimen/spacing_extrasmall_4"
                android:orientation="vertical"
                android:background="@color/white">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        style="@style/icon.left"
                        android:src="@drawable/ic_reley_25dp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/size_medium_56"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginLeft="@dimen/spacing_normal_16">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:textSize="@dimen/font_normal_15"
                            android:text="Реле"
                            android:textAlignment="viewStart"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:background="@color/white"/>
                        <android.support.v7.widget.SwitchCompat
                            android:id="@+id/adaptivetrack_sw"
                            android:layout_weight="1.7"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Выкл"
                            android:textOff="Выкл"
                            android:textOn="Вкл"/>
                        <ImageView
                            style="@style/icon.left"
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:layout_weight="2"
                            android:src="@drawable/ic_send_black_24dp"/>
                    </LinearLayout>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/line_size"
                    android:background="@color/grey_light"
                    android:layout_marginLeft="@dimen/spacing_large_54"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        style="@style/icon.left"
                        android:src="@drawable/ic_releyimp_25dp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/size_medium_56"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginLeft="@dimen/spacing_normal_16">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:textSize="@dimen/font_normal_15"
                            android:text="Реле импульса: длина"
                            android:textAlignment="viewStart"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:background="@color/white"/>
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:textSize="@dimen/font_normal_15"
                            android:text="0"
                            android:textAlignment="viewStart"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:background="@color/white"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:textSize="@dimen/font_normal_15"
                            android:text="сек."
                            android:textAlignment="viewStart"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:background="@color/white"/>
                        <ImageView
                            style="@style/icon.left"
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:layout_weight="2"
                            android:src="@drawable/ic_send_black_24dp"/>
                    </LinearLayout>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/line_size"
                    android:background="@color/grey_light"
                    android:layout_marginLeft="@dimen/spacing_large_54"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        style="@style/icon.left"
                        android:src="@drawable/ic_callback_25dp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/size_medium_56"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginLeft="@dimen/spacing_normal_16">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:textSize="@dimen/font_normal_15"
                            android:text="Обратный звонок"
                            android:textAlignment="viewStart"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:background="@color/white"
                            android:id="@+id/textView2"/>

                        <ImageView
                            style="@style/icon.left"
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:layout_weight="11"
                            android:src="@drawable/ic_send_black_24dp"/>
                    </LinearLayout>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/line_size"
                    android:background="@color/grey_light"
                    android:layout_marginLeft="@dimen/spacing_large_54"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        style="@style/icon.left"
                        android:src="@drawable/ic_reset_25dp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/size_medium_56"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginLeft="@dimen/spacing_normal_16">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:textSize="@dimen/font_normal_15"
                            android:text="Сброс настроек"
                            android:textAlignment="viewStart"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:background="@color/white"/>
                        <ImageView
                            style="@style/icon.left"
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:layout_weight="11"
                            android:src="@drawable/ic_send_black_24dp"/>
                    </LinearLayout>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/line_size"
                    android:background="@color/grey_light"
                    android:layout_marginLeft="@dimen/spacing_large_54"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        style="@style/icon.left"
                        android:src="@drawable/ic_update_25dp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/size_medium_56"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginLeft="@dimen/spacing_normal_16">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:textSize="@dimen/font_normal_15"
                            android:text="Обновление ПО"
                            android:textAlignment="viewStart"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:background="@color/white"/>
                        <ImageView
                            style="@style/icon.left"
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:layout_weight="11"
                            android:src="@drawable/ic_send_black_24dp"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</LinearLayout>
