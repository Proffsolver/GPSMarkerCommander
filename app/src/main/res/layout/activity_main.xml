<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:orientation="vertical"
    tools:context=".ui.activities.MainActivity">
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/grey">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    style="@style/lrmargin"
                    android:orientation="vertical"
                    android:background="@color/grey">
                    <TextView
                        android:id="@+id/coutrat_et"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_normal_16"
                        android:textAlignment="center"
                        android:textSize="@dimen/font_larger_22"
                        android:text="5"
                        android:textColor="@color/white"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/spacing_small_8"
                        android:textSize="@dimen/font_small_12"
                        android:textAlignment="center"
                        android:text="@string/status_in_route"
                        android:textColor="@color/white"/>
                </LinearLayout>
                <View
                    android:layout_width="@dimen/line_size"
                    android:layout_height="match_parent"
                    android:background="@color/grey_light"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/lrmargin"
                    android:orientation="vertical"
                    android:layout_weight="0.4"
                    android:background="@color/grey">
                    <TextView
                        android:id="@+id/coutrow_et"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_normal_16"
                        android:textSize="@dimen/font_larger_22"
                        android:textAlignment="center"
                        android:text="5"
                        android:textColor="@color/white"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/spacing_small_8"
                        android:textSize="@dimen/font_small_12"
                        android:textAlignment="center"
                        android:text="@string/status_stopped"
                        android:textColor="@color/white"/>
                </LinearLayout>
                <View
                    android:layout_width="@dimen/line_size"
                    android:layout_height="match_parent"
                    android:background="@color/grey_light"/>
                <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/lrmargin"
                android:orientation="vertical"
                android:layout_weight="0.3"
                android:background="@color/grey">
                <TextView
                    android:id="@+id/coutproj_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_normal_16"
                    android:textSize="@dimen/font_larger_22"
                    android:textAlignment="center"
                    android:text="5"
                    android:textColor="@color/white"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/spacing_small_8"
                    android:textSize="@dimen/font_small_12"
                    android:textAlignment="center"
                    android:text="@string/status_in_repair"
                    android:textColor="@color/white"/>
            </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_small_8"
                android:layout_marginBottom="@dimen/spacing_small_8">

                <ImageView
                    style="@style/icon.left"
                    android:src="@drawable/ic_phone_black_24dp"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="@dimen/size_big_72"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="bottom"
                    android:layout_marginRight="@dimen/spacing_medium_32"
                    android:layout_marginLeft="@dimen/spacing_normal_16">
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <EditText
                            android:id="@+id/phone_et"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/font_normal_15"
                            android:inputType="phone"
                            android:hint="Мобильный телефон"
                            android:text="+7(916)987-03-50"
                            android:enabled="false"
                            android:textColor="@color/black"
                            android:textColorHint="@color/grey"
                            android:focusable="false"/>
                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>
                <ImageView
                    style="@style/icon.right"
                    android:src="@drawable/ic_phone_in_talk_black_24dp"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_size"
                android:background="@color/grey_light"
                android:layout_marginLeft="@dimen/spacing_larger_72"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_small_8"
                android:layout_marginBottom="@dimen/spacing_small_8">

                <ImageView
                    style="@style/icon.left"
                    android:src="@drawable/ic_mail_black_24dp"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="@dimen/size_big_72"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="bottom"
                    android:layout_marginRight="@dimen/spacing_medium_32"
                    android:layout_marginLeft="@dimen/spacing_normal_16">
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <EditText
                            android:id="@+id/email_et"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textEmailAddress"
                            android:textSize="@dimen/font_normal_15"
                            android:hint="E-mail"
                            android:text="serebrennikov.evgeniy@gmail.com"
                            android:enabled="false"
                            android:textColor="@color/black"
                            android:textColorHint="@color/grey"
                            android:focusable="false"/>
                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>
                <ImageView
                    style="@style/icon.right"
                    android:src="@drawable/ic_send_black_24dp"/>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_size"
                android:background="@color/grey_light"
                android:layout_marginLeft="@dimen/spacing_larger_72"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_small_8"
                android:layout_marginBottom="@dimen/spacing_small_8">
                <ImageView
                    style="@style/icon.left"
                    android:src="@drawable/ic_vk_circle_24dp"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="@dimen/size_big_72"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="bottom"
                    android:layout_marginRight="@dimen/spacing_medium_32"
                    android:layout_marginLeft="@dimen/spacing_normal_16">
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <EditText
                            android:id="@+id/vkprof_et"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textUri"
                            android:textSize="@dimen/font_normal_15"
                            android:hint="Профиль в VK"
                            android:text="vk/serebrennikov.evgeniy"
                            android:enabled="false"
                            android:textColor="@color/black"
                            android:textColorHint="@color/grey"
                            android:focusable="false"/>
                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>
                <ImageView
                    style="@style/icon.right"
                    android:src="@drawable/ic_visibility_black_24dp"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_size"
                android:background="@color/grey_light"
                android:layout_marginLeft="@dimen/spacing_larger_72"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_small_8"
                android:layout_marginBottom="@dimen/spacing_small_8">

                <ImageView
                    style="@style/icon.left"
                    android:src="@drawable/ic_github_circle_24dp"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="@dimen/size_big_72"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="bottom"
                    android:layout_marginRight="@dimen/spacing_medium_32"
                    android:layout_marginLeft="@dimen/spacing_normal_16">
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <EditText
                            android:id="@+id/gitrepo_et"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textUri"
                            android:textSize="@dimen/font_normal_15"
                            android:hint="Репозиторий"
                            android:text="github.com\\Proffsolver\\DevIntensive"
                            android:enabled="false"
                            android:textColor="@color/black"
                            android:textColorHint="@color/grey"
                            android:focusable="false"/>
                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>
                <ImageView
                    style="@style/icon.right"
                    android:src="@drawable/ic_visibility_black_24dp"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_size"
                android:background="@color/grey_light"
                android:layout_marginLeft="@dimen/spacing_larger_72"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_small_8"
                android:layout_marginBottom="@dimen/spacing_small_8">

                <ImageView
                    style="@style/icon.left"
                    android:src="@drawable/ic_description_black_24dp"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="@dimen/size_big_72"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="bottom"
                    android:layout_marginRight="@dimen/spacing_medium_32"
                    android:layout_marginLeft="@dimen/spacing_normal_16">
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <EditText
                            android:id="@+id/aboutme_et"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/font_normal_15"
                            android:hint="О себе"
                            android:text="Мне 34 года, живу в Москве, у меня техническое образование."
                            android:enabled="false"
                            android:textColor="@color/black"
                            android:textColorHint="@color/grey"
                            android:focusable="false"/>
                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_size"
                android:background="@color/grey_light"
                android:layout_marginLeft="@dimen/spacing_larger_72"/>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>