<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:layout_centerVertical="true">
    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_geopos_25dp"
        android:layout_marginTop="@dimen/spacing_medial_24"/>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:paddingTop="12dp"
                  android:layout_weight="1"
                  android:paddingBottom="@dimen/spacing_extrasmall_4"
                  android:paddingLeft="@dimen/spacing_small_8"
                  android:orientation="vertical">
        <TextView
            android:id="@+id/device_name_list_tv"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/size_small_24"
            android:textSize="@dimen/font_normal_15"
            android:textColor="@android:color/black"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/device_type_list_tv"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/size_small_24"
            android:textSize="@dimen/font_small_12"
            android:textColor="@android:color/black"
            android:textStyle="bold"/>
    </LinearLayout>
    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/group_view_iv"
        android:src="@drawable/ic_add_white_24dp"
        android:layout_marginTop="@dimen/spacing_medial_24"/>
</LinearLayout>